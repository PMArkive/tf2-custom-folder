set "xIn=red_tape_recorder.qc"
set "xOut=red_tape_recorder.snap"
set "xTerm=activity"
set "xInsert=snap"
if not defined xIn goto End
if not defined xOut goto End
if defined xOut if exist "%xOut%" del /f /q "%xOut%" > nul
for /f "usebackq tokens=*" %%a in (`type %xIn%`) do (
    echo.%%a >> %xOut%
    for /f "usebackq tokens=*" %%x in (`echo."%%a" ^| find "%xTerm%"`) do (
        echo.%xInsert% >> %xOut%
    )
)
copy "hide.txt" + "red_tape_recorder.snap" "red_tape_recorder.done.snap"
move "red_tape_recorder.done.snap" "red_tape_recorder.qc"